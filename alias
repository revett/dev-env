alias bbc='cd ~/Dropbox/Projects/BBC'
alias code='cd ~/Dropbox/Projects/Code'
alias golang='cd ~/Dropbox/Projects/Code/golang/src'
alias dev-env='cd ~/Dropbox/Projects/Code/Github/dev-env'

alias bi='bundle install'
alias bu='bundle update'
alias rack='rackup -p 9292'

alias rubo='rubocop | grep F'
alias ready='rspec spec/ && rubocop --fail-level F | grep F'

alias dir='basename $(git rev-parse --show-toplevel)'

alias gpush='git push -u origin '
alias gmerge='git merge --squash '

alias docker-up='docker-machine start dev && eval "$(docker-machine env dev)"'

alias bct="bbc-cosmos-tools"

alias re-source='source ~/.zshrc'

alias spurious-up='chruby 2.0 && boot2docker up && spurious-server start && spurious up'
