alias alias-list="cat ~/.scripts/alias"

alias bbc="cd ~/Dropbox/Projects/BBC"
alias code="cd ~/Dropbox/Projects/Code"
alias scripts="cd ~/.scripts"

alias bi="bundle install"
alias bu="bundle update"
alias rack="rackup -p 9292"

alias gpush="git push -u origin "
alias gmerge="git merge --squash "
alias open-gh='result=${PWD##*/}; open "http://github.com/BBC-News/$result"'

alias re-source="source ~/.zshrc"

alias spurious-up="chruby 2.0 && boot2docker up && spurious-server start && spurious up"
